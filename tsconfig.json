{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(dashboard)/dashboard/page.tsx",
    "src/middleware.ts",
    "src/auth.jsx",
    "instrumentation.ts",
    "src/components/dashboard/ChartTheme.tsx",
    "src/components/overview.tsx",
    "src/graphql/resolvers/orderResolvers.js",
    "src/components/form-builder-1/ChatPreview.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
